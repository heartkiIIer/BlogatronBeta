<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h2 style="text-align: center;">Edit Post</h2>

		<div style="width: 30%; margin: 25px auto;">
			<form action="/items/<%= item._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="item[name]" value="<%= item.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="item[image]" value="<%= item.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="item[description]" value="<%= item.description %>">
				</div>
				<div class="center">
					<button class="btn btn-default">Submit!</button>
        <a href="/items" class="btn btn-default">Return</a>
				</div>
			</form>

			
		</div>

	</div>
</div>

<% include ../partials/footer %>
