<div class="container">
	<div class="row">
		<h2 style="text-align: center;">Edit Comment</h2>

		<div style="width: 30%; margin: 25px auto;">
			<form action="/items/<%= item_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="center">   
            <button class="btn btn-default">Submit!</button>
          <a href="/items" class="btn btn-default">Return</a>
				</div>
			</form>

			
		</div>

	</div>
</div>

