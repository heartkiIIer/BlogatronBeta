<% include partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To Marketplace Beta!</h1>
			<p>If you can't get it here, you can't get it anywhere.</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/items/new">Add New Item</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% items.forEach((item) => { %>
			<div class="col-md-3 col-sm-6">
        <div class="thumbnail">
           <img src="<%= item.image %>">
					 <div class="caption">
						 <h4><%= item.name %></h4>
					 </div>
        </div>
			</div>
		<% }); %>
	</div>
</div>

<% include partials/footer %>
